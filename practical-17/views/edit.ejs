<%- include('partials/header') %>

<h1 class="text-2xl font-bold mb-6">Edit Student</h1>

<form action="/edit/<%= student._id %>" method="POST" class="max-w-lg bg-white p-6 rounded-lg shadow">
  <div class="mb-4">
    <label for="name" class="block text-gray-700 mb-2">Name</label>
    <input type="text" id="name" name="name" value="<%= student.name %>" required class="w-full p-2 border rounded">
  </div>
  <div class="mb-4">
    <label for="email" class="block text-gray-700 mb-2">Email</label>
    <input type="email" id="email" name="email" value="<%= student.email %>" required class="w-full p-2 border rounded">
  </div>
  <div class="mb-4">
    <label for="phone" class="block text-gray-700 mb-2">Phone</label>
    <input type="text" id="phone" name="phone" value="<%= student.phone %>" required class="w-full p-2 border rounded">
  </div>
  <div class="mb-4">
    <label for="course" class="block text-gray-700 mb-2">Course</label>
    <input type="text" id="course" name="course" value="<%= student.course %>" required class="w-full p-2 border rounded">
  </div>
  <div class="mb-4">
    <label for="feeStatus" class="block text-gray-700 mb-2">Fee Status</label>
    <select id="feeStatus" name="feeStatus" class="w-full p-2 border rounded">
      <option value="Pending" <%= student.feeStatus === 'Pending' ? 'selected' : '' %>>Pending</option>
      <option value="Paid" <%= student.feeStatus === 'Paid' ? 'selected' : '' %>>Paid</option>
      <option value="Overdue" <%= student.feeStatus === 'Overdue' ? 'selected' : '' %>>Overdue</option>
    </select>
  </div>
  <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Update Student</button>
</form>

<%- include('partials/footer') %>
